<p id="notice"><%= notice %></p>

<div class="page-header">
  <h1>Users</h1>
</div>

<table class="table table-dark">
  <thead class="bg-secondary text-white">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone no</th>
      <th>Gender</th>
      <th>State</th>
      <th>City</th>
      <th>Dob</th>
      <th>Company</th>
      <th>Actions</th>
      <th>Actions</th>
      <th>Actions</th>
      <th colspan="3" ></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name.titleize %></td>
        <td><%= user.email %></td>
        <td><%= user.phone_no %></td>
        <td><%= user.gender %></td>
        <td><%= user.state.name.titleize %></td>
        <td><%= user.city.name.titleize %></td>
        <td><%= user.dob %></td>
        <td><%= user.company&.name.titleize %></td>
        <td><%= link_to 'Show', user, class: 'btn btn-success text-white' %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-info text-white' %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger text-white' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, :class => "btn btn-warning text-white" %>
