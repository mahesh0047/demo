<h1>Addresses</h1>

<table class="table table-dark">
  <thead class="bg-secondary text-white">
    <tr>
      <th>Name</th>
      <th>Company</th>
      <th>Action</th>
      <th>Action</th>
      <th>Action</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.name.titleize %></td>
        <td><%= address.company.name.titleize %></td>
        <td><%= link_to 'Show', address,class: 'btn btn-success text-white' %></td>
        <td><%= link_to 'Edit', edit_address_path(address),class: 'btn btn-info text-white' %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger text-white' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

