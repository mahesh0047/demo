<p id="notice"><%= notice %></p>

<h1>States</h1>

<table class="table table-dark">
  <thead class="bg-secondary text-white">
    <tr>
      <th>Name</th>
      <th>Action</th>
      <th>Action</th>
      <th>Action</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @states.each do |state| %>
      <tr>
        <td><%= state.name.titleize %></td>
        <td><%= link_to 'Show', state,class: 'btn btn-success text-white' %></td>
        <td><%= link_to 'Edit', edit_state_path(state),class: 'btn btn-info text-white' %></td>
        <td><%= link_to 'Destroy', state, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger text-white' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

